<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/dizibgColor"
    >
    <ImageView
        android:id="@+id/item_imageViewResim"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleType="fitXY"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/item_imageViewİsmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dizi İsmi"
        android:textColor="@color/dizitextColor"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_imageViewBolumSayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Bölüm"
        android:textColor="@color/dizitextColor"
        android:textSize="16sp"
        android:textStyle="bold" />



</LinearLayout>